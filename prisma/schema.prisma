datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URI")
}

generator client {
    provider             = "prisma-client-py"
    interface            = "asyncio"
    recursive_type_depth = 5
}

model BotUser {
    id        Int       @id @unique
    username  String?
    full_name String
    joined_at DateTime  @default(now())
    left_at   DateTime?
}

model BotChat {
    id       BigInt  @id @unique
    title    String?
    username String?
    type     String
}
